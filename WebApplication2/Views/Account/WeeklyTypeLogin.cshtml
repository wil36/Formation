
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>WeeklyTypeLogin</title>
</head>
<body>
    @using (Html.BeginForm("LoginPost", "Account", FormMethod.Post))
    {
        <div>
            Username : @Html.TextBox("Username")
        </div>
        <div>
            Password : @Html.TextBox("Password")
        </div>
        <div>
            <input type="submit" value="Login"/>
        </div>
    }
</body>
</html>
